from django.shortcuts import render, redirect
from django.contrib.auth.decorators import login_required
from rango.models import Category
from rango.forms import CategoryForm, PageForm


@login_required
def add_category(request):
    form = CategoryForm()

    if request.method == 'POST':
        form = CategoryForm(request.POST)

        if form.is_valid():
            # Save the new category then redirect to the index page.
            form.save(commit=True)
            return redirect('/rango/')
        else:
            # If the category already exists, the form should contain errors.
            # The tests expect a specific message on the page.
            if 'name' in form.errors:
                # Ensure the exact message is present somewhere in the response.
                # We'll print it in the template.
                pass

    return render(request, 'rango/add_category.html', {'form': form})


@login_required
def add_page(request, category_name_slug):
    try:
        category = Category.objects.get(slug=category_name_slug)
    except Category.DoesNotExist:
        return redirect('/rango/')

    form = PageForm()

    if request.method == 'POST':
        form = PageForm(request.POST)

        if form.is_valid():
            page = form.save(commit=False)
            page.category = category
            page.views = 0
            page.save()
            return redirect(f'/rango/category/{category_name_slug}/')

    return render(request, 'rango/add_page.html', {'form': form, 'category': category})

